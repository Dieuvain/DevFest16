<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <LinearLayout
        android:id="@+id/_line1"
        android:layout_below="@+id/_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.9">

        <ImageView
            android:id="@+id/_icon1"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />

        <ImageView
            android:id="@+id/_icon2"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/_line2"
        android:layout_below="@+id/_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.9">

        <ImageView
            android:id="@+id/_icon3"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />

        <ImageView
            android:id="@+id/_icon4"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/_line3"
        android:layout_below="@+id/_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.9">

        <ImageView
            android:id="@+id/_icon5"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />

        <ImageView
            android:id="@+id/_icon6"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/Location"
            android:layout_weight="0.24" />


    </LinearLayout>
</LinearLayout>